{
  "project_name": "TechTribe",
  "design_philosophy": {
    "persona": "E1 - The Anti-AI Designer",
    "core_principles": [
      "Fusion over Imitation: Mix Tech with Luxury",
      "Emotion First: Confidence, Mastery, Future-Forward",
      "Content is King: All text in Azerbaijani",
      "Zoom In: Focus on details",
      "Negative Space: Luxurious breathing room",
      "Contrast: High contrast light/dark"
    ],
    "anti_patterns": [
      "No purple/teal CTA buttons",
      "No generic 'Inter' for headings",
      "No centered layouts everywhere",
      "No gradient overload"
    ]
  },
  "technical_setup": {
    "framework": "React + Tailwind CSS",
    "ui_library": "Shadcn/UI",
    "icons": "Lucide React",
    "animations": "Framer Motion (REQUIRED)",
    "smooth_scroll": "Lenis (REQUIRED)",
    "fonts": {
      "headings": {
        "name": "Space Grotesk",
        "url": "https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap",
        "class": "font-heading"
      },
      "body": {
        "name": "Manrope",
        "url": "https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700&display=swap",
        "class": "font-sans"
      }
    },
    "required_packages": [
      "framer-motion",
      "lenis",
      "@radix-ui/react-slot",
      "class-variance-authority",
      "clsx",
      "tailwind-merge"
    ]
  },
  "theme": {
    "mode": "dark",
    "colors": {
      "background": "#02040A",
      "foreground": "#F8FAFC",
      "card": "#0A0C14",
      "card_foreground": "#F8FAFC",
      "popover": "#0A0C14",
      "popover_foreground": "#F8FAFC",
      "primary": "#3B82F6",
      "primary_foreground": "#FFFFFF",
      "secondary": "#1E293B",
      "secondary_foreground": "#F8FAFC",
      "muted": "#1E293B",
      "muted_foreground": "#94A3B8",
      "accent": "#1E293B",
      "accent_foreground": "#F8FAFC",
      "destructive": "#EF4444",
      "destructive_foreground": "#F8FAFC",
      "border": "#1E293B",
      "input": "#1E293B",
      "ring": "#3B82F6",
      "radius": "0.75rem"
    },
    "gradients": {
      "hero_glow": "radial-gradient(circle at center, rgba(59,130,246,0.15) 0%, rgba(2,4,10,0) 70%)",
      "beam": "linear-gradient(to right, transparent, #3B82F6, transparent)"
    }
  },
  "layout_strategies": {
    "container": "max-w-7xl mx-auto px-6 md:px-12",
    "section_spacing": "py-24 md:py-32",
    "grid_bento": "grid grid-cols-1 md:grid-cols-3 gap-8",
    "glass_panel": "bg-white/5 backdrop-blur-xl border border-white/10 shadow-2xl"
  },
  "components": {
    "buttons": {
      "primary": "bg-primary text-white hover:bg-blue-600 shadow-[0_0_20px_rgba(59,130,246,0.5)] transition-all duration-300 hover:scale-105 rounded-full px-8 py-6 text-lg font-medium",
      "secondary": "bg-white/5 border border-white/10 hover:bg-white/10 text-white backdrop-blur-md transition-all duration-300 rounded-full px-8 py-6 text-lg"
    },
    "cards": {
      "feature": "group relative overflow-hidden rounded-2xl bg-card border border-white/5 p-8 hover:border-primary/50 transition-all duration-500",
      "product": "bg-card rounded-2xl overflow-hidden border border-white/5 hover:shadow-2xl transition-all duration-300 group"
    },
    "inputs": {
      "default": "bg-white/5 border-white/10 focus:border-primary focus:ring-1 focus:ring-primary/50 h-12 rounded-lg"
    }
  },
  "sections_guidelines": {
    "hero": {
      "style": "Cinematic, centered or split, high impact",
      "elements": [
        "Large Typography (Space Grotesk, 4xl-7xl)",
        "Glowing background effect",
        "Floating 3D-style elements or abstract tech imagery",
        "Azerbaijan Tech Statement"
      ]
    },
    "why_us": {
      "style": "Bento Grid Layout",
      "elements": ["Cards with glassmorphism", "Iconography (Lucide)", "Hover reveal effects"]
    },
    "catalogue": {
      "style": "Premium E-commerce Grid",
      "elements": ["High quality thumbnails", "Price tags in accent color", "Filter sidebar/topbar"]
    },
    "admin_dashboard": {
      "style": "High Density, Functional",
      "elements": ["Sidebar navigation", "Data visualization (Recharts)", "DataTable (Shadcn)"]
    }
  },
  "assets": {
    "images": {
      "hero_bg": "https://images.unsplash.com/photo-1647356191320-d7a1f80ca777?crop=entropy&cs=srgb&fm=jpg&q=85",
      "abstract_tech": "https://images.unsplash.com/photo-1707557741615-b9f4c8a61192?crop=entropy&cs=srgb&fm=jpg&q=85",
      "team_meeting": "https://images.unsplash.com/photo-1758873269320-372f7ad170f0?crop=entropy&cs=srgb&fm=jpg&q=85",
      "office_work": "https://images.unsplash.com/photo-1761122827167-159d1d272313?crop=entropy&cs=srgb&fm=jpg&q=85",
      "person_laptop": "https://images.unsplash.com/photo-1599837487527-e009248aa71b?crop=entropy&cs=srgb&fm=jpg&q=85"
    }
  },
  "content_rules": {
    "language": "Azerbaijani (az-AZ)",
    "placeholders": "DO NOT use Lorem Ipsum. Generate meaningful Azerbaijani tech content.",
    "tone": "Professional, Innovative, Premium, Trustworthy",
    "key_terms": {
      "TechTribe": "TechTribe",
      "About Us": "Haqqımızda",
      "Services": "Xidmətlər",
      "Contact": "Əlaqə",
      "Login": "Daxil ol",
      "Register": "Qeydiyyat",
      "Dashboard": "İdarə Paneli",
      "Catalogue": "Kataloq"
    }
  },
  "accessibility": {
    "contrast": "Ensure text contrast ratio >= 4.5:1",
    "focus_states": "Visible ring-2 ring-primary on focus",
    "reduced_motion": "Respect prefers-reduced-motion"
  },
  "instructions_to_main_agent": [
    "1. INSTALL PACKAGES: yarn add framer-motion lenis",
    "2. SETUP FONTS: Add Space Grotesk and Manrope to index.css via @import or HTML head.",
    "3. CONFIG TAILWIND: Update tailwind.config.js with the provided colors and font families.",
    "4. GLOBAL STYLES: Update index.css with the CSS variables for dark mode provided in 'theme.colors'.",
    "5. CREATE COMPONENTS: Build the UI using the 'components' guidelines. Use Shadcn for complex logic, custom HTML/Tailwind for layout.",
    "6. ANIMATIONS: Wrap page content in Framer Motion AnimatePresence. Use LayoutGroup for smooth transitions.",
    "7. CHATBOT: Implement the floating chatbot widget on ALL public pages.",
    "8. LANGUAGE: Ensure ALL visible text is in Azerbaijani."
  ]
}